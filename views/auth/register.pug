extends ../layout/index

block contenido
    section.py-3
        h1.text-5xl.my-10.font-extrabold.text-center Bienes 
            span.font-normal Raíces
        h2.text-center.text-4xl.font-extrabold= view 

        if errors
            div(class="max-w-md mx-auto my-10")
                each error in errors
                    p.text-red-600.font-semibold.p-1= error.msg

        .mt-8.mx-auto.max-w-md  
            .bg-white.py-8.px-4.shadow 
                form(method="POST" action="/auth/register" noValidate).space-y-5
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="nombre") Nombre:   
                        input#nombre.w-full.p-3.border.border-gray-300.rounded-md.placeholder-gray-300(placeholder="Tu nombre"
                        type="text" name="name" value= user ? user.name : "")
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="email") Email de registro:   
                        input#email.w-full.p-3.border.border-gray-300.rounded-md.placeholder-gray-300(placeholder="Tu email"
                        type="email" name="email" value= user ? user.email : "")
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="password") Password:   
                        input#password.w-full.p-3.border.border-gray-300.rounded-md.placeholder-gray-300(placeholder="Tu password"
                        type="Password" name="password")
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="confpassword") Confirma tu Password:   
                        input#confpassword.w-full.p-3.border.border-gray-300.rounded-md.placeholder-gray-300(placeholder="Confirma tu password"
                        type="Password" name="confirmPassword")
                    div.flex.items-center.justify-between
                        a.text-gray-500.text-xs(href="/auth/login") ¿Ya tienes cuenta? Inicia Sesión
                        a.text-gray-500.text-xs(href="/auth/reset-password") ¡Olvidé mi Contraseña!
                    
                    input(class="hover:bg-indigo-700 w-full bg-indigo-600 text-white font-bold py-3 cursor-pointer")(
                        type="submit" value="Crear cuenta")